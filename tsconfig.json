{
	"compilerOptions": {
		"allowJs": true,
		"target": "es5",
		"module": "es2015",
		"moduleResolution": "node",
		"sourceMap": true,
		"baseUrl": "/assets",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "react"
	},
    "include": [
		"modules/**/*",
		"scripts/**/*"
	],
	"exclude": [
		"node_modules"
	]
}